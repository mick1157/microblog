<h1>Home Page</h1>

<% @entries.each do |entry| %>
    <div class='row-fluid'>
      <div class='span5'>
        <div class='well'>
          <div class='pull-left'>
            <strong>@<%= entry.user.user_name %></strong>
          </div>
          <div class='pull-right'>
            <%= time_ago_in_words(entry.created_at) %> ago
          </div>
          <br />
          <br />
          <%= entry.post %>
        </div>
      </div>
    </div>
<% end %>
<br />

<%= link_to 'New User', new_user_path, :class => "btn btn-primary" %>
<br />
<%= link_to 'User list', users_path, :class => "btn btn-primary" %>
<br />
<%= link_to 'New Blog Post', new_entry_path, :class => "btn btn-primary"%>
<br />
<%= link_to 'Blog Post list', entries_path, :class => "btn btn-primary"%>
<br />